function preload_script( filename )
  local module = _G[ filename ]
  ASSERT(
    module, "[preload_script]: Failed to load '%s'", filename
  )
  ASSERT(
    type( module ) == "table",
    "[preload_script]: Failed to load '%s', must be a table",
    filename
  )
  return module
end


