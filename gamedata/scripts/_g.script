-- Взято из аддона Naxac'a
local to_ptrn = {
  [ " " ] = "%s",
  [ "." ] = "%.",
  [ "%" ] = "%%",
  [ "*" ] = "%*",
  [ "-" ] = "%-",
}
string.explode = function( div, str, clear )
-- div   -- разделитель
-- str   -- строка
-- clear -- обрезать ли пробелы по краям строк (false/true)
  local ret = {}
  for s in str:gmatch( "([^" .. ( to_ptrn[ div ] or div ) .. "]+)" ) do
   table.insert( ret, ( clear and s:trim() or s ) )
  end
  return ret
end
