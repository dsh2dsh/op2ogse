local lower = string.lower
string.lower = function( s )
  return lower(
    s:gsub(
      "([А-Я])",
      function( c ) return string.char( c:byte() + 32 ) end
    ):gsub( "Ё", "ё" )
  )
end
local upper = string.upper
string.upper = function( s )
  return upper(
    s:gsub(
      "([а-я])",
      function( c ) return string.char( c:byte() - 32 ) end
    ):gsub( "ё", "Ё" )
  )
end
