  end
  obj = trader:object( "flamethrower_bad" )
  if obj ~= nil then
    alife():release( alife():object( obj:id() ), true )
  end
  obj = trader:object( "af_fireball" )
  if obj ~= nil then
    alife():release( alife():object( obj:id() ), true )
  end
end


