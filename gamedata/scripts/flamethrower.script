function attach( sm )
  sm:subscribe({ signal = "on_spawn", fun = this.on_spawn })
end


function on_spawn()
  if db.actor:has_info( "start_work" ) then return end
  dsh.exec_on_update( function()
    ogse_signals.get_mgr():subscribe({
      signal = "on_take", fun = this.on_take
    })
  end )
end


function on_take( obj )
  have_a_fire_kolobok()
  have_a_trubki()
  have_a_manometr()
  have_a_vodko()
  have_a_gorelka()
end


