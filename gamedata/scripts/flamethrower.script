function remove_spot()
  for a = 1, 65534 do
    local obj = alife():object( a )
    if obj and obj.parent_id == 65535 then
      if obj:section_name() == "trubka" then
        level.map_remove_object_spot( obj.id, "red_location" )
        break
      end
    end
  end
  if db.actor:dont_has_info( "find_815" ) then
    remove_metka_na_npc()
  end
end


