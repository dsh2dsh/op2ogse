  if ogse_campfire.find_nearest_flame_pos( 10 ) then
    ogse_signals.get_mgr():call( "on_before_script_autosave" )
    return true
  end
  return dsh_life_saver.is_charged( onetime, quiet )
end


function make_quicksave()
  local cnt = ogse.load_var( "dsh.next_quicksave", 0 )
  if cnt == 9 then
    cnt = 1
  else
    cnt = cnt + 1
  end
  ogse.save_var( "dsh.next_quicksave", cnt, "u8" )
  local next_save = string.format( "%s_quicksave_%u", user_name(), cnt )
  cmd( "save", next_save )
end


function backup_quicksave()
  local cnt = ogse.load_var( "dsh.next_quicksave", 1 )
  local f = getFS()
  local quicksave = f:update_path(
    "$game_saves$", user_name() .. "_quicksave.sav"
  )
  local next_save  = f:update_path(
    "$game_saves$", string.format( "%s_quicksave_%u.sav", user_name(), cnt )
  )
  if f:exist( next_save ) then
    f:file_delete( next_save )
  end
  f:file_copy( quicksave, next_save )
  if cnt == 9 then
    cnt = 1
  else
    cnt = cnt + 1
  end
  ogse.save_var( "dsh.next_quicksave", cnt, "u8" )
end


