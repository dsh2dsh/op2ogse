function actor_get_art_check( f )
  for k, v in pairs( get_art_levels() ) do
    local found
    amk_utils.inventory_iterate_section(
      k,
      function( obj )
        if f( v, obj ) and db.actor:is_in_ruck( obj ) then
          found = obj
          return true
        end
      end
    )
    if found then return found end
  end
end

