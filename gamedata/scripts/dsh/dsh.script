function play_snd_queue( queue, k )
  local snd = xr_sound.get_safe_sound_object( table.remove( queue, 1 ) )
  snd:play_no_feedback(
    db.actor, sound_object.s2d, 0, vector():set( 0, 0, 0 ), 1.0
