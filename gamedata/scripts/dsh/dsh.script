function get_save_list()
  local t    = {}
  local path = getFS():update_path( "$game_saves$", "" )
  for file in lfs.dir( path ) do
    if string.find( file, ".sav", -4, true ) then
      local name = string.sub( file, 0, string.len( file ) - 4 )
      table.insert( t, {
        [ "name"  ] = name,
        [ "modif" ] = lfs.attributes( path .. file, "modification" ),
      })
    end
  end
  table.sort( t, function( a, b ) return b.modif < a.modif end )
  return t
end


