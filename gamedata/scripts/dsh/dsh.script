  local ini = sobj:spawn_ini()
  ini.readonly = false
  local s = d * 24 * 3600 + h * 3600 + m * 60
  local t = game.CTime()
  t:setHMSms( 0, 0, s + math.max( s, 3600 ), 0 )
  local ready = game.CTime( game.get_game_time() + t )
  ini:w_string(
    "amk_mod.af_transform_builder", "ready",
