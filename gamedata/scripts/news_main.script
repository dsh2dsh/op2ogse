-- выдать те новости, что успели собраться и сгрупироватся.
function check_news()
  for _, v in ipairs( table_spawned ) do
    on_spawn_group( v.community, v.level, v.position, v.count, v.o_type )
  end
  table_spawned     = {}
  table_spawned_idx = {}
