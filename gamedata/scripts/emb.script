-- Обработчик. При каждом вызове увеличивает индекс таблицы. Параметр передавать только для отладки конкретного объекта
function worker(index)
	local idx = amk.load_variable("emb_idx", 0)
	if index then
		idx = index
	end

	local obj
	
	-- удаляем текущий объект
	if embs[idx] then
	
		-- выключаем звук рюкзака
		if embs[idx].rukzak and embs[idx].rukzak.sound then
			stop_sound(embs[idx].rukzak.sound)
		end
		
		-- выключаем звук рестриктора
		if embs[idx].restrictor and embs[idx].restrictor.sound then
			stop_sound(embs[idx].restrictor.sound)
		end

		-- выключаем звук телепорта
		if embs[idx].teleport and embs[idx].teleport.sound then
			stop_sound(embs[idx].teleport.sound)
		end

		-- удаляем телепорт
		if embs[idx].teleport then
			kostya_dialog.delete_teleport(embs[idx].teleport.section)
		end

		-- удаляем предыдущую записку
		if embs[idx].note then
			amk.remove_item_from_inventory_by_name(embs[idx].note, db.actor)
		end
		
		-- выдаем поршень
		if embs[idx].info then
			db.actor:give_info_portion(embs[idx].info)
		end

		-- выполняем функцию
		if embs[idx].func then
			loadstring(embs[idx].func)()
		end
	end
	
	-- следующий объект
	idx = idx+1
	amk.save_variable("emb_idx", idx)

	-- создаем следующий объект
	if embs[idx] then
	
		-- рюкзак
		obj = embs[idx].rukzak
		if obj then
			alife():create(obj.section, vector():set(obj.position.x, obj.position.y, obj.position.z), obj.lv, obj.gv)
		end

		-- рестриктор
		obj = embs[idx].restrictor
		if obj then
			snp.create_restrictor(vector():set(obj.position.x, obj.position.y, obj.position.z), obj.lv, obj.gv, obj.radius, obj.func)
		end

		-- телепорт
		obj = embs[idx].teleport
		if obj then
			if obj.position == "actor" then
				kostya_dialog.create_teleport(obj.section, db.actor:position(), db.actor:level_vertex_id(), db.actor:game_vertex_id())
			else
				kostya_dialog.create_teleport(obj.section, vector():set(obj.position.x, obj.position.y, obj.position.z), obj.lv, obj.gv)
			end
		end

		-- запускаем звуки
		start_sound()
	else
		-- все, кончилась цепочка
		amk.del_variable("emb_idx")
	end
end

-- запуск сюжетных звуков
function start_sound()
	local idx = amk.load_variable("emb_idx")
	if not idx then return end
	
	local obj
	
	-- рюкзаки
	obj = embs[idx].rukzak
	if obj and obj.sound and obj.location == level.name() then
		play_sound(obj.sound, vector():set(obj.position.x, obj.position.y, obj.position.z))
	end

	-- рестрикторы
	obj = embs[idx].restrictor
	if obj and obj.sound and obj.location == level.name() then
		play_sound(obj.sound, vector():set(obj.position.x, obj.position.y, obj.position.z))
	end

	-- телепорты
	obj = embs[idx].teleport
	if obj and obj.sound and obj.location == level.name() then
		play_sound(obj.sound, vector():set(obj.position.x, obj.position.y, obj.position.z))
	end
end

-- собственно запуск звука
function play_sound(snd, pos)
	xr_sound.get_safe_sound_object(snd):play_at_pos(db.actor, pos, 0, sound_object.s3d+sound_object.looped)
end
-- собственно остановка звука
function stop_sound(snd)
	xr_sound.get_safe_sound_object(snd):stop()
end

