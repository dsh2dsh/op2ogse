local is_actor_climbing = false
function actor_binder:check_climbing()
  self.am:reschedule( 500 )
  local aobj = get_actor_obj()
  if aobj:is_actor_climb() or aobj:is_actor_climbing() then
    if db.actor:active_item() and not is_actor_climbing then
      is_actor_climbing = true
      hide_weapon( 500 )
    end
  elseif is_actor_climbing then
    is_actor_climbing = false
    restore_weapon()
  end
end


