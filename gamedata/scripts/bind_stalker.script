function actor_binder:info_callback( npc, info_id )
  -- Отметки на карте
  archievements.on_info( info_id )

  --AMK UTILS--
  amk.on_info( npc,info_id )
  --AMK UTILS--
  if npc:id() == db.actor:id() then
    meceniy_spawn.respawn( info_id )
  end

