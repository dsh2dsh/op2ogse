function actor_binder:on_trade( item, sell_bye, money )
  if sell_bye == true then
    game_stats.money_trade_update( money )
  else       
    if isMagazinedWeapon( item ) then
      item:unload_magazine()
    end
    game_stats.money_trade_update( -money )
  end

  self.am:call( "on_trade", item, sell_bye, money )
  db.traded = true
end


