	dir *= 2;
	float4 tc = float4(frac(eye_position.xyz), 10);
	float a = 0.0;
	while (l < max_l)
	{
		float4 tc1 = tc.xyzw;
		tc1.xyzw *= 0.1;
//		float4 tc2 = tc.yzxw;
//		tc2.xy *= 4;
		float ns = tex3Dlod(s_noise, tc1).x;
		a += ns;
//		ns = tex3Dlod(s_noise, tc2).x;
//		a += ns;
		tc.xyz += dir;
		l += 1;
	};
	a *= 0.01;
	a = saturate(a);*/

