light_color		    = 0.8,0.9,1
light_range		    = 30.0
light_time 		    = 1
light_height		    = 1.5			;подъем источника света на высоту

idle_light		= off

hit_type		     = shock

disable_time		= 5000	;врем€ игнорировани€ неживого объекта в зоне (-1 если не нужно)
disable_time_small	= 500	;врем€ игнорировани€ маленького неживого объекта в зоне (-1 если не нужно)
disable_idle_time	= 100	;врем€ отключени€ idle партиклов

awaking_time		= 200
blowout_time		= 1500	
accamulate_time	= 1000

ignore_nonalive	= false
ignore_small		= true
ignore_artefacts	= true

;параметры телекинеза дл€ зоны
throw_in_impulse			  = 	5000		;сила импульса вт€гивани€ (дл€ тела 100кг)
