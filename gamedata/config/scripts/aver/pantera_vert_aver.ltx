[logic]
active = heli_move@idle

[heli_move@idle]
path_move = pantera_vert_idle_move
engine_sound = false
combat_safe_altitude = 85
on_info = {+vert_aver_pantera} heli_move@fly1

[heli_move@fly1]
path_move = pantera_vert_polet_idle_move
default_velocity = 15
engine_sound = true
combat_enemy = nil
combat_use_rocket = false
combat_use_mgun = false
rocket_delay = 6000
combat_safe_altitude = 60
invulnerable = true
on_info = {+na_predesant_pant_vert} heli_move@fly2

[heli_move@fly2]
path_move = pantera_vert_predesant_move
engine_sound = true
default_velocity = 10
combat_enemy = nil
combat_use_rocket = false
combat_use_mgun = false
invulnerable = true
combat_safe_altitude = 80
on_timer = 25000 | heli_move@fly3

[heli_move@fly3]
path_move = pantera_vert_desant_move
engine_sound = true
default_velocity = 7
combat_enemy = nil
combat_use_rocket = false
combat_use_mgun = false
rocket_delay = 6000
combat_safe_altitude = 55
velocity = 0
invulnerable = true
on_timer = 20000 | heli_move@fly4 %+posadka_pantera_vert =arhara_dialog.posadka_pant_sms1%

[heli_move@fly4]
path_move = pantera_vert_otlet_move
engine_sound = true
default_velocity = 10
combat_enemy = nil
combat_use_rocket = false
combat_use_mgun = false
rocket_delay = 6000
combat_safe_altitude = 80
invulnerable = false
on_timer = 10000 | heli_move@fly5

[heli_move@fly5]
path_move = pantera_vert_stop_move
engine_sound = true
default_velocity = 10
combat_enemy = nil
combat_use_rocket = false
combat_use_mgun = false
rocket_delay = 6000
combat_safe_altitude = 80
invulnerable = false
on_timer = 20000 | heli_move@stop

[heli_move@stop]
path_move = pantera_vert_stop_move
engine_sound = false
