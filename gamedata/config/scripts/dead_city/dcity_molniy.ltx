; -*- mode: conf-windows; coding: windows-1251-dos -*-

[logic]
active=walker
meet = no_meet
on_hit = hit@molniy
on_death = death@molniy
combat_ignore = combat_ignore

[walker]
path_walk = dead_city_molniy_walk
path_look = dead_city_molniy_look
danger = danger_ignore@molniy
on_timer = 3000 | remark@sit
meet = no_meet
combat_ignore_cond = always
combat_ignore_keep_when_attacked = true

[remark@sit]
combat_ignore_cond = always
combat_ignore_keep_when_attacked = true
anim = sit_stul
target = actor
on_actor_dist_le_nvis = 2.5 | walker@1
meet = no_meet

[walker@1]
path_walk = dead_city_molniy_walk
path_look = dead_city_molniy_look
danger = danger_ignore@molniy
meet = no_meet
combat_ignore_cond = always
combat_ignore_keep_when_attacked = true

[danger_ignore@molniy]
ignore_distance = 0

[hit@molniy]
on_info = %+spawn_after_molniy =arhara_dialog.otsek_varka_kamen =arhara_dialog.dell_dcity_molniy%

[death@molniy]
on_info = %+spawn_after_molniy =arhara_dialog.otsek_varka_kamen =arhara_dialog.dell_dcity_molniy%
