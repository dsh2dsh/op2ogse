; -*- mode: conf-windows; coding: windows-1251-dos -*-

; Переопределить некоторые параметры гулагов.
[dsh.gulag.override.agr_factory_hold]
; Военные на Агропроме, в здании с Адреналином
cond = {-agr_help_krot_done}


; Сталкеры на Агропроме
[dsh.gulag.override.agr2_st_factory]
communities = stalker, freedom, green, nebo
dsh_after_delay = 72, 168 ;от трех суток до недели
dsh_change_profile_on_empty = true
dsh_profiles    = stalkers
dsh_walking     = true
dsh_population_locked = true

[dsh.gulag.override.agr2_st_factory.stalkers]:dsh.gulag.override.agr2_st_factory


; Бандиты на Агропроме, которые нападают на сталкеров
[dsh.gulag.override.agr2_bandit_st]
cond            = {+agroprom_military_case_done =dsh_is_smart_empty(agr_road_patrol2)}
switch_0 =
switch_1 =
dsh_after_delay = 72, 168 ;от трех суток до недели
dsh_change_profile_on_empty = true
dsh_profiles    = def,40,def2,30,def3,30
dsh_walking     = true
dsh_population_locked = true

[dsh.gulag.override.agr2_bandit_st.def]:dsh.gulag.override.agr2_bandit_st

[dsh.gulag.override.agr2_bandit_st.def2]:dsh.gulag.override.agr2_bandit_st
communities = killer

[dsh.gulag.override.agr2_bandit_st.def3]:dsh.gulag.override.agr2_bandit_st
communities = sniper


[dsh.gulag.override.agr_boar_nest]
; 4 кабана рядом с Шерстюком
dsh_walking = true


[dsh.gulag.override.agr_boar_nest_2]
; 2 кабана недалеко от Шерстюка
dsh_walking = true


[dsh.gulag.override.agr2_bloodsucker_lair2]
; кровосос в здании с Адреналином
cond = never ;{+agroprom_military_case_done}


; Военные в НИИ, после чемодана
[dsh.gulag.override.agr2_st_nii]
dsh_walking = true
; гулять идут только сидящие у лампадки
dsh_walking_stalkers.job_section = _kamp

; военные вокруг лампадки на столе, на первом этаже
[dsh.xr_kamp.agr2_st_nii_kamp_1]
level_vertex_id = 104715
preferred_seats = 104719, 106224, 103226, 106967, 102458


[dsh.gulag.override.agr_road_patrol1]
cond            = always ;{-agroprom_military_case_done}
dsh_after_delay = 72, 168 ;от трех суток до недели
dsh_change_profile_on_empty = true
dsh_population_locked = true
dsh_profiles    = def
dsh_walking     = true
groups = 4

[dsh.gulag.override.agr_road_patrol1.def]:dsh.gulag.override.agr_road_patrol1
capacity = 2 ;5


[dsh.gulag.override.agr_road_patrol2]
cond            = {=dsh_is_smart_empty(agr2_bandit_st)}
dsh_after_delay = 72, 168 ;от трех суток до недели
dsh_change_profile_on_empty = true
dsh_population_locked = true
dsh_profiles    = def
dsh_walking     = true

[dsh.gulag.override.agr_road_patrol2.def]:dsh.gulag.override.agr_road_patrol2


; группа Крота
[dsh.gulag.override.agr_factory_defence]
cond            = {-agr_find_gunslinger_cache_found -agr_krot_go_to_kamp}
dsh_change_profile_on_empty = true
dsh_population_locked = true
dsh_profiles    = def

; Группа Крота не должна пополняться, пока они там под деревьями
; стоят. Вот сколько выжило, столько пусть и остается.
[dsh.gulag.override.agr_factory_defence.def]:dsh.gulag.override.agr_factory_defence
cond            = never


; Чук и Гек
[dsh.gulag.override.agro_brother]
cond = {-kot_agro_mono_done}


; костер для Дезертира, около лампадки
[dsh.xr_kamp.agr_ratcatcher_kamp]
level_vertex_id = 39581
preferred_seats = 39580


; собаки на холме над туннелем
[dsh.gulag.override.agr_rush]
cond = {+seensak_l03_agroprom}

; собаки у перехода на Янтарь, под ЛЭП
[dsh.gulag.override.agr_dog_nest1]
cond = {+seensak_l03_agroprom}

; две псевдособаки в овраге у туннеля
[dsh.gulag.override.agr_pseudodog_nest1]
cond = {+seensak_l03_agroprom}
