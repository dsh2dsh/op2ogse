; ѕереопределить некоторые параметры гулагов.
[dsh.gulag.override.green_forest]
; охотники
dsh_walking = true
dsh_walking_keep_min = 4 ;из 6

[dsh.gulag.override.stalker_forest_bashya]
; сталкеры у башни
dsh_walking = true

[dsh.gulag.override.bunker_forest]
; наемники у моста
communities     = killer
dsh_after_delay = 24, 72 ;от суток до 3
dsh_change_profile_on_empty = true
dsh_population_locked = true
dsh_profiles    = killer, monolith
dsh_walking     = true

[dsh.gulag.override.bunker_forest.killer]:dsh.gulag.override.bunker_forest
[dsh.gulag.override.bunker_forest.monolith]:dsh.gulag.override.bunker_forest
communities     = monolith


; ѕсевдособаки у перехода с ј—
[dsh.gulag.override.pseudodog_forest]
; „то бы не кучковались около перехода, будем их телепортировать на место
; работы, как только они дойдут до своего game_vertex-а.
teleport_to_job = true
