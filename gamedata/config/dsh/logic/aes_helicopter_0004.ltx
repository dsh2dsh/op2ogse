; -*- mode: conf-windows; coding: windows-1251-dos -*-

[logic]
active = heli_move1

[heli_move1]
path_move = aes_heli_attack_walk2
path_look = aes_heli_attack_look2
on_signal = sound | %+aes_first_sound%
;on_actor_in_zone = aes_actor_heli3 | %=heli_set_enemy_actor%
combat_use_rocket = false
mute = true
rocket_delay = 2000
combat_safe_altitude = -100
on_info = {=heli_health_le(0.3)} heli_move@death, {+sar_monolith_destroy} heli_move@death

[heli_move@death]
path_move = heli_death_way
invulnerable = true
on_signal = arrived | heli_move@silent
combat_ignore = true

[heli_move@silent]
path_move = heli_death_way
invulnerable = true
engine_sound = false 
combat_ignore = true
