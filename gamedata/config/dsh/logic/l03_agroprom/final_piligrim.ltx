; -*- mode: conf-windows; coding: windows-1251-dos -*-
;
; Пилигрим на сходке авторитетов

[logic]
active = walker
combat_ignore = combat_ignore

[walker]
path_walk = final_piligrim_walk
path_look = final_piligrim_look
meet = meet
combat_ignore_cond = {=fighting_dist_ge(10)}
on_info = {+final_agro_say_ok_start} walker1
on_info2 = {+final_priz_agro_neud_start} kamp

[walker1]
path_walk = final_piligrim1_walk
path_look = final_piligrim1_look
meet = meet
combat_ignore_cond = {=fighting_dist_ge(10)}
on_info = {+komanda_gg_posadka} walker2

[walker2]
path_walk = final_petrenko1_walk
path_look = final_petrenko1_look
meet = no_meet
combat_ignore_cond = {=fighting_dist_ge(10)}
on_signal = endpoint | nil %=arhara_dialog.delete_final_piligrim%

[kamp]
center_point  = final_gruppa_camp_center
path_walk = final_gruppa_camp_center_task
radius = 0.2
meet = no_meet
combat_ignore_cond = {=fighting_dist_ge(10)}

[meet]
use = true
use_wpn = true
meet_talk_enabled = true
