active = sr_idle

[sr_idle]
on_actor_inside = {+dcity_kontrik_done -dcity_obmorok_enemy} sr_idle@time

[sr_idle@time]
on_timer = 500 | {-dcity_obmorok_enemy} sr_idle@time1 %+dcity_spawn_obmorok =arhara_dialog.strelka_obmorok_sms1%

[sr_idle@time1]
on_timer = 10000 | {-dcity_obmorok_enemy} nil %+uhod_iz_mg_start =arhara_dialog.strelka_obmorok_sms2%

[sr_idle@nil]
