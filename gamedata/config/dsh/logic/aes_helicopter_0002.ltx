; -*- mode: conf-windows; coding: windows-1251-dos -*-

[logic]
active = heli_move1
on_hit = hit

[heli_move1]
path_move = aes_heli_attack_desant_walk_begin4
on_info = {+aes_desant_go} heli_move2
engine_sound = false
combat_safe_altitude = -100

[heli_move2]
path_move = aes_heli_attack_desant_walk4
path_look = aes_heli_attack_desant_look4
combat_ignore = true
on_signal = sound | %+aes_gonduras_sound%
on_signal2 = sound2 | %+aes_choper_anomaly%
mute = true
on_info = {+aes_choper_flame} %=heli_start_flame%
combat_safe_altitude = -100
on_info2 = {=heli_health_le(0.3)} heli_move@death, {+sar_monolith_destroy} heli_move@death

[heli_move@death]
path_move = heli_death_way
invulnerable = true
on_signal = arrived | heli_move@silent
combat_ignore = true

[heli_move@silent]
path_move = heli_death_way
invulnerable = true
engine_sound = false 
combat_ignore = true

[hit]
on_info = %+aes_choper_anomaly =heli_start_flame%
