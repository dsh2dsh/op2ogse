; -*- mode: conf-windows; coding: windows-1251-dos -*-

[logic]
active = heli_move1

[heli_move1]
path_move = aes_heli_attack_desant_walk_begin1
on_info = {+aes_desant_go} heli_move2
engine_sound = false
combat_safe_altitude = -100

[heli_move2]
path_move = aes_heli_attack_desant_walk1
path_look = aes_heli_attack_desant_look1
invulnerable = true
immortal = true
on_signal = final | %+aes_desant_wave1% heli_move3
combat_ignore = true
on_signal2 = sound1 | %+aes_2chopers_attack%
mute = true
combat_safe_altitude = -100

[heli_move3]
path_move = aes_heli_attack_desant_walk1_2
path_look = aes_heli_attack_desant_look1_2
combat_use_rocket = false
on_actor_in_zone = aes_actor_heli1 | %=heli_set_enemy_actor%
mute = true
combat_safe_altitude = -100
on_info = {=heli_health_le(0.3)} heli_move@death, {+sar_monolith_destroy} heli_move@death

[heli_move@death]
path_move = heli_death_way
invulnerable = true
on_signal = arrived | heli_move@silent
combat_ignore = true

[heli_move@silent]
path_move = heli_death_way
invulnerable = true
engine_sound = false 
combat_ignore = true
