[smart_terrains]
none = true

[logic]
active = walker
combat_ignore = combat_ignore
trade = misc\trade_gavr.ltx
on_hit = hit
on_death = death

[walker]
path_walk = mil_trader_gavr_walk1
path_look = mil_trader_gavr_look1
combat_ignore_cond = {-info_gavr_dead -info_gavr_enemy} always

[hit]
on_info = {-info_gavr_dead -info_gavr_enemy =hit_by_actor} %+info_gavr_enemy =braad_test.killactor_enemy%

[death]
on_info = {-info_gavr_dead -info_gavr_enemy =killed_by_actor} %+info_gavr_enemy =braad_test.killactor_enemy%
