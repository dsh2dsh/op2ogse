; -*- mode: conf-windows; coding: windows-1251-dos -*-

[logic]
active = heli_move1

[heli_move1]
path_move = aes_heli_attack_desant_walk_begin5
on_info = {+aes_actor_gate} heli_move2
engine_sound = false
combat_safe_altitude = -100

[heli_move2]
path_move = aes_heli_attack_desant_walk5
path_look = aes_heli_attack_desant_look5
invulnerable = true
immortal = true
combat_ignore = true
on_signal = desant | %+aes_desant_wave4%
on_signal2 = final | heli_move3
combat_safe_altitude = -100

[heli_move3]
path_move = aes_heli_attack_desant_walk5_2
combat_safe_altitude = -100
on_info = {=heli_health_le(0.3)} heli_move@death, {+sar_monolith_destroy} heli_move@death

[heli_move@death]
path_move = heli_death_way
invulnerable = true
on_signal = arrived | heli_move@silent
combat_ignore = true

[heli_move@silent]
path_move = heli_death_way
invulnerable = true
engine_sound = false 
combat_ignore = true
