; Сумасшедший на АС

[logic]
active = camper2
on_death = on_death
combat_ignore = combat_ignore

[on_death]
on_info = %+mil_crazy_dead +sar2_death_24%

[camper1]
path_walk = mil_zomb_stalker_walk1
path_look = mil_zomb_stalker_look1
on_actor_in_zone = crazy_zone | camper2
radius = 0

[camper2]
path_walk = mil_zomb_stalker_walk2
path_look = mil_zomb_stalker_look2
radius = 10
no_retreat = true
on_info = {+psih_is_alive} camper3

[camper3]
path_walk = mil_zomb_stalker_walk2
path_look = mil_zomb_stalker_look2
combat_ignore_cond = {=fighting_actor}
on_info = {-ui_talk} camper4 %=akill.psih_is_alive%

[camper4]
path_walk = mil_zomb_stalker_walk2
path_look = mil_zomb_stalker_look2
combat_ignore_cond = {=fighting_actor}
on_timer = 5000 | nil %+psih_is_alive_enemy =xr_wounded.custom_change2%
