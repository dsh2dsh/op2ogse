; -*- mode: conf-windows; coding: windows-1251-dos -*-

; военные под мостом и на насыпи должны идти в опустевший смарт немедленно
[dsh.gulag.idle.amk_embankment]:dsh.gulag.idle
stalker = 0

[dsh.gulag.idle.esc_bridge]:dsh.gulag.idle
stalker = 0


; Сталкеры под дорогой, на Кордоне
[dsh.gulag.override.esc2_most]
communities = stalker, green, freedom
capacity    = 5 ;3
dsh_after_delay = 72, 168 ;от трех суток до недели
dsh_change_profile_on_empty = true
dsh_profiles    = def
dsh_walking     = true
dsh_population_locked = true

[dsh.gulag.override.esc2_most.def]:dsh.gulag.override.esc2_most


; Деревня новичков
[dsh.gulag.override.esc_lager]
dsh_walking          = true
dsh_walking_keep_min = 11


; Костер у тепловоза, у насыпи. Активен, пока не активируется esc2_bandit_les,
; где Шустрый с Юриком будут.
[dsh.gulag.override.sak_esc_lager]
cond = {-esc_kill_bandits_quest_kill -esc_kill_bandits_quest_done}
communities = stalker, green
dsh_after_delay = 72, 168 ;от трех суток до недели
dsh_change_profile_on_empty = true
dsh_profiles    = stalkers
dsh_walking     = true
dsh_population_locked = true

[dsh.gulag.override.sak_esc_lager.stalkers]:dsh.gulag.override.sak_esc_lager


; Сталкеры в домике на Кордоне, где Лис был
[dsh.gulag.override.esc2_st_fox_place]
communities = stalker, green
dsh_after_delay = 72, 168 ;от трех суток до недели
dsh_change_profile_on_empty = true
dsh_profiles    = stalkers
dsh_walking     = true
dsh_population_locked = true

[dsh.gulag.override.esc2_st_fox_place.stalkers]:dsh.gulag.override.esc2_st_fox_place


; Сталкеры на ферме, за мостом
[dsh.gulag.override.esc_farm_lager]
dsh_after_delay = 72, 168 ;от трех суток до недели
dsh_change_profile_on_empty = true
dsh_profiles    = stalkers
dsh_walking     = true
dsh_population_locked = true

[dsh.gulag.override.esc_farm_lager.stalkers]:dsh.gulag.override.esc_farm_lager


; Сталкеры на Кордоне, у перехода на Свалку
[dsh.gulag.override.esc2_smart_stalker_exit]
communities = stalker, green, freedom
dsh_after_delay = 72, 168 ;от трех суток до недели
dsh_change_profile_on_empty = true
dsh_profiles    = stalkers,70,bandits,30
dsh_walking     = true
dsh_population_locked = true

[dsh.gulag.override.esc2_smart_stalker_exit.stalkers]:dsh.gulag.override.esc2_smart_stalker_exit

[dsh.gulag.override.esc2_smart_stalker_exit.bandits]:dsh.gulag.override.esc2_smart_stalker_exit
communities = bandit


; костёр на Кордоне, где Шустрый с Юриком сидят, недалеко от насыпи.
[dsh.gulag.override.esc2_bandit_les]
capacity             = 4 ;3
dsh_walking          = true
dsh_walking_keep_min = 3


[dsh.gulag.override.esc_assault]
; три сталкера на холме, которые идут на АТП и там мрут у костра. Но в самом
; начале - это группа Петрухи, которая атакует АТП. Вот после освобождения
; Шустрого мы этот смарт и выключим. Таким же образом в all.spawn выключается
; смарт с первоначальными бандитами на АТП.
cond = {-esc_kill_bandits_quest_done}


; бандиты на АТП
[dsh.gulag.override.esc2_st_fabric]
dsh_after_delay = 24, 72 ;от суток до 3-х
dsh_change_profile_on_empty = true
dsh_profiles    = bandits,70,stalkers,30
dsh_walking     = true
dsh_population_locked = true

[dsh.gulag.override.esc2_st_fabric.bandits]:dsh.gulag.override.esc2_st_fabric
communities = bandit

[dsh.gulag.override.esc2_st_fabric.stalkers]:dsh.gulag.override.esc2_st_fabric
communities = stalker, green, freedom
switch_0    =
switch_1    =


; еще бандиты на АТП
[dsh.gulag.override.esc_podmoga_bandit]
communities = bandit
dsh_after_delay = 24, 72 ;от суток до 3-х
dsh_change_profile_on_empty = true
dsh_profiles    = bandits,70,stalkers,30
dsh_walking     = true
dsh_population_locked = true

[dsh.gulag.override.esc_podmoga_bandit.bandits]:dsh.gulag.override.esc_podmoga_bandit
communities = bandit

[dsh.gulag.override.esc_podmoga_bandit.stalkers]:dsh.gulag.override.esc_podmoga_bandit
communities = stalker, green, freedom


; собаки, которые атакуют Лиса
[dsh.gulag.override.esc_dogs_to_fox]
cond = {-escape_stalker_done}


; два кабана за насыпью, между домиком Лиса и железной дорогой
[dsh.gulag.override.esc_small_home1]
cond = never


; Смарт для Кости на Кордоне. Должен закрыться после его ухода.
[dsh.gulag.override.esc_new_lager]
cond = {-kostya_walk}


; Смарт Басти и Ко в ДН
[dsh.gulag.override.esc_derevnya_buusty]
cond = {+buusty_kvest_start -barmen_noi}


; Какой-то смарт для кровососа, который удалялся при взятии у Прапора задания
; на штык-нож.
[dsh.gulag.override.esc2_bloodsucker1]
cond = {-prapor_jaw_start +agroprom_military_case_done}


; Наемники, атакующие ДН по заданию Фаната
[dsh.gulag.override.esc_killers]
cond = {-escape_lager_killers_die}


; Сталкеры у камней, между домиком Лиса и железной дорогой
[dsh.gulag.override.esc_stone_lager]
dsh_after_delay = 72, 168 ;от трех суток до недели
dsh_change_profile_on_empty = true
dsh_profiles    = stalkers
dsh_walking     = true
dsh_population_locked = true

[dsh.gulag.override.esc_stone_lager.stalkers]:dsh.gulag.override.esc_stone_lager


; Лис и Проводник
[dsh.gulag.override.esc_stalker_camp]
cond = {-val_x18_door_open}, {-esc_find_groza_done}
dsh_walking = true
