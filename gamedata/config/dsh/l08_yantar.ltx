[dsh.gulag.override.yan_st_stalker2]
; —талкеры на янтаре, у завода
communities = stalker, green
dsh_after_delay = 24, 72 ;от суток до 3-х
dsh_change_profile_on_empty = true
dsh_profiles    = def
dsh_walking     = true
dsh_population_locked = true

