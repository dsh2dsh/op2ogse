[wpn_ak74_m2]:class_ar,hud_wpn_fx.ak74
GroupControlSection	= spawn_group
discovery_dependency	= 
$spawn              	= "weapons\ak74_m2"	; name and section in level editor
$npc					= on				
$prefetch 				= 8
scheduled				= off               ;[] option for ALife Simulator
cform               	= skeleton
class               	= WP_AK74			; class of the weapon that corresponding to CPP class
description				= enc_arsenal_wpn-ak74_m2  

;-----------------------------------------------------------------------------------
holder_range_modifier	= 1.0		       ; во сколько раз увеличивается eye_range 
holder_fov_modifier		= 0.7              ; во сколько раз увеличивается eye_fov
;-----------------------------------------------------------------------------------

cost					= 7500				; the price of the item
weapon_class			= assault_rifle		; the type of the box that will be used in buy-menu in multiplayer mode	
	
ammo_limit				= 210				; obsolete
ammo_elapsed			= 30				; obsolete
	
ammo_mag_size			= 30				; clip (magazine) size
fire_modes				= 1, -1
f_mode				= 2

ammo_class		 		= ammo_5.56x45_ss190, ammo_5.56x45_ap, ammo_5.56x45_gd
grenade_class			= ammo_vog-25, ammo_vog-25p			; name of the ltx-section of used grenades 
launch_speed			= 0

hand_dependence			= 1									; how many hands (1 or 2) we used to hold weapon in
single_handed			= 0
	
animation_slot			= 2									; type of the animation that will be used

inv_name	        	= ars-ak74_m2     
inv_name_short		= ars-ak74_m2
inv_weight			= 3.4								; weight in inventory

inv_grid_width     = 5
inv_grid_height    = 2
inv_grid_x         = 5
inv_grid_y         = 61

kill_msg_x			= 0
kill_msg_y			= 28
kill_msg_width		= 84
kill_msg_height		= 28

;-----------------------------------------------------------------------------------
;--params of weapon recoil
fire_dispersion_base			= 0.18		;угол (в градусах) базовой дисперсии оружия (оружия зажатого в тисках)
disp_rate = 1.82

;--отдача
cam_relax_speed         	= 8.5 	;скорость возврата в исходное положение
cam_dispersion          	= 0.18	;0.68	;0.98		;увеличения угла (в градусах) с каждым выстрелом
cam_dispersion_inc		= 0.15	;увеличениe cam_dispersion с каждым выстрелом
cam_dispertion_frac		= 0.35	;0.000001	;0.85		;ствол будет подыматься на cam_dispersion*cam_dispertion_frac +- cam_dispersion*(1-cam_dispertion_frac)
cam_max_angle			= 4.0		;максимальный угол отдачи
cam_max_angle_horz		= 6.0		;(degree) maximum shot horizontal degree 
cam_step_angle_horz		= 0.12	;2.8	;0.18		;(degree) size of step camera moved in horizontal position while shooting
;--износ
misfire_probability 	= 0.0003	;вероятность осечки при максимальном износе 
;-----------------------------------------------------------------------------------

fire_point             		= 0,0.210,0.660			; position (3rd person view) for particles of fire 
fire_point2            		= 0,0.220,0.730			; position (3rd person view) for particles of fire (when shooting with secondary fire)

flame_particles			= weapons\generic_weapon05	; particles for shooting effects
smoke_particles			= weapons\generic_shoot_00
grenade_flame_particles		= weapons\generic_weapon00
	
shell_point		 			= 0,0.250,0.164				; position (3rd person view) for shell to throw out
shell_particles	 			= weapons\arsenal_shells1	; name of the particles for shells

;-- ttc
hit_rate	                  = 1.85
fire_distance            	= 320		; maximum fire distance that bullet can fly
bullet_speed			= 910	;1000	; starting bullet speed	                     ;КОЭФФИЦИЕНТ начальной скорости пули
rpm                      	= 650		; max round per minute

;params when silencer is attached 
;similar to corresponding params without prefix silencer_

silencer_hit_power       	= 0.70
silencer_hit_impulse	 	= 51
silencer_fire_distance   	= 230
silencer_bullet_speed	 	= 835

hud                      	= wpn_ak74_m2_hud				; name of the section of the hud

position         	        = -0.028,-0.172, -0.012			; position (offset) and orientation of the weapon in the hands of character
orientation      	        = 0,0,0						; (3rd person view)

;--STRAP PARAMETERS-----------------------------------------------------------------
strap_position         		= -0.16,-0.40,0.15			; position (offset) and orientation of the weapon when it is strapped
strap_orientation      		= -10,-5,10					; (3rd person view in degrees)
strap_bone0					= bip01_spine2
strap_bone1					= bip01_spine1

visual         		        = weapons\ak74\wpn_ak74_m2.ogf		; name of the model for 3rd person view

light_color					= 0.6,0.5,0.3				; params for light during the fire
light_range					= 5							; radius
light_var_color				= 0.05						
light_var_range				= 0.5
light_time 					= 0.2						

ph_mass						= 5							; physic mass (kg)

;addons
scope_status				= 2							; 0 - no addon
silencer_status				= 2							; 1 - permanent
grenade_launcher_status		      = 2							; 2 - attachable

zoom_enabled		= true						; (on,off)zoom mode (right mouse button)

scope_name 					= wpn_addon_optik  ;wpn_addon_scope			; section name for the attachable scope
scope_x 					= 56 ;42						; offset in inventory icon
scope_y 					= 4
silencer_name  				= wpn_addon_sil_556_ar 	; section name for the attachable silencer
silencer_x 					= 219						; offset in inventory icon
silencer_y 					= 19					
grenade_launcher_name 		      = wpn_addon_grenade_launcher; section name for the attachable grenade launcher
grenade_launcher_x 			= 108						; offset in inventory icon
grenade_launcher_y 			= 25

;sounds (name of the sound, volume (0.0 - 1.0), delay (sec))
snd_draw					= weapons\aks_74m\draw, 0.5
snd_holster					= weapons\aks_74m\holster, 0.4
snd_shoot					= weapons\aks_74m\shot101
snd_empty					= weapons\aks_74m\empty, 0.6
snd_reload					= weapons\aks_74m\ak101_reload, 0.5
snd_shoot_grenade				= weapons\aks_74m\grenshoot
snd_reload_grenade			= weapons\aks_74m\grenload, 1.0, 0.7
snd_switch					= weapons\aks_74m\switch
snd_silncer_shot			      = weapons\aks_74m\silenser_shoot_ak101, 0.75


;params when silencer is attached 
;similar to corresponding params without prefix silencer_

;silencer_flame_particles 	= weapons\generic_weapon01
silencer_smoke_particles 	= weapons\generic_shoot_00

silencer_light_color		= 0.6,0.5,0.3
silencer_light_range		= 2
silencer_light_var_color	= 0.05
silencer_light_var_range	= 0.5
silencer_light_time 		= 0.2

