cam_dispersion_inc		= 0.15;0.20		;увеличениe cam_dispersion с каждым выстрелом
cam_dispertion_frac		= 0.19		;ствол будет подыматься на cam_dispersion*cam_dispertion_frac +- cam_dispersion*(1-cam_dispertion_frac)
cam_max_angle			= 5.0		;максимальный угол отдачи
