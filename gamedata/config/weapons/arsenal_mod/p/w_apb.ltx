;;;;;;;;;;;;;;;;;;;;;;;; Автоматический пистолет бесшумный АПБ ;;;;;;;;;;;;;;;;;;;;;;;;;
;---------------------------------------------------------------------------------------
[wpn_apb]:class_pistol_auto,hud_wpn_fx.pb
GroupControlSection		= spawn_group
discovery_dependency 		= 
$spawn 				= "weapons\pm"		; option for Level Editor
$npc				= on			; option for Level Editor
$prefetch 			= 8
scheduled 			= off 			; option for ALife Simulator
cform 				= skeleton      
class 				= WP_LR300
description			= enc_ars-apb

;-----------------------------------------------------------------------------------
holder_range_modifier		= 1.0 			; во сколько раз увеличивается eye_range 
holder_fov_modifier		= 1.5 			; во сколько раз увеличивается eye_fov
;-----------------------------------------------------------------------------------

cost				= 2800
 
ammo_limit			      = 120
ammo_current			= 120
ammo_elapsed			= 20
ammo_mag_size			= 20

ammo_class			= ammo_9x18_pmm, ammo_9x18_fmj
                	
fire_modes					= 1, -1					
					
hand_dependence			= 1
single_handed			= 1

animation_slot		= 1			; type of the animation that will be used

inv_name			= ars-apb   
inv_name_short		= ars-apb   
inv_weight			= 1.06

inv_grid_width     = 2
inv_grid_height    = 1
inv_grid_x         = 26
inv_grid_y         = 6

;спавнить автоматически боеприпасы при подъеме оружия
;auto_spawn_ammo		= false

;-----------------------------------------------------------------------------------
;отдача
cam_relax_speed         	= 11.5	;скорость возврата в исходное положение
cam_dispersion          	= 0.35	;увеличения угла (в градусах) с каждым выстрелом
cam_dispersion_inc		= 0.0  	;увеличениe cam_dispersion с каждым выстрелом
cam_dispertion_frac		= 1.0	      ;ствол будет подыматься на cam_dispersion*cam_dispertion_frac +- cam_dispersion*(1-cam_dispertion_frac)
cam_max_angle			= 20.0      ;максимальный угол отдачи
cam_max_angle_horz		= 5.0	      ;(degree) maximum shot horizontal degree 
cam_step_angle_horz		= 1.0 	;(degree) size of step camera moved in horizontal position while shooting

misfire_probability 		   = 0.0006	;вероятность осечки при максимальном износе 
;-----------------------------------------------------------------------------------

direction           	      = 0, 0, 1
fire_point               	= 0.0, 0.134, 0.235

flame_particles			= weapons\generic_weapon03
smoke_particles			= weapons\generic_shoot_00

shell_point		 	= 0.00, 0.127, 0.025
shell_dir		 	= 0.0, 0.0, 0.4
shell_particles	 		= weapons\arsenal_shells1

; ttc
hit_rate	            = 1.88
bullet_speed		= 370		;начальная скорость пули
rpm 				= 600
rpm_empty_click 	 	= 150
; end ttc

hud 				= wpn_apb_hud
normal 				= 0, 1, 0
position                 	= -0.020,-0.084,-0.0085
orientation 			= 0, 0, 1

;--STRAP PARAMETERS-----------------------------------------------------------------
;strap_position 		= -0.1, -0.45, 0.2		; position (offset) and orientation of the weapon when it is strapped
;strap_orientation 		= 1.57, 0, 0			; (3rd person view)
;strap_bone0			= bip01_spine2
;strap_bone1			= bip01_spine1

visual 				= weapons\aps\wpn_apb_k.ogf

light_color		 	= 0.6, 0.5, 0.3
light_range		 	= 3.0
light_var_color		= 0.05
light_var_range		= 0.5
light_time 		 	= 0.2

ph_mass			 	= 1

;addons
scope_status			= 0
silencer_status			= 2
grenade_launcher_status		= 0

zoom_enabled		= true

silencer_name 		= wpn_addon_sil_apb  
silencer_x 			= 75					
silencer_y 			= -17					

;sounds (name of the sound, volume (0.0 - 1.0), delay (sec))
snd_draw			= weapons\aps\aps_draw
snd_holster			= weapons\aps\aps_holster
snd_shoot			= weapons\aps\apb_shoot
snd_empty			= weapons\gen_empty
snd_reload			= weapons\deagle\reload_deagle3
snd_close			= weapons\generic_close
snd_silncer_shot		= weapons\aps\apb_shot_sil, 0.4

;silencer_flame_particles 	= weapons\generic_weapon01
silencer_smoke_particles 	= weapons\generic_shoot_00

silencer_hit_power		= 0.57
silencer_hit_impulse	 	= 48
silencer_fire_distance 		= 70
silencer_bullet_speed	 	= 325

silencer_light_color		= 0.6, 0.5, 0.3
silencer_light_range		= 2
silencer_light_var_color	= 0.05
silencer_light_var_range	= 0.5
silencer_light_time 		= 0.2

;-----------------------------------------------------------------------------
;-- HUD DESCRIPTION
;-----------------------------------------------------------------------------
[wpn_apb_hud]:hud_pistol
allow_inertion			= true

shell_point			= 0.0350, 0.2770, -0.0200
fire_point			= 0.0000, 0.2000, -0.0200
fire_bone 			= wpn_body

orientation			= 0, 0, 0
position                = 0.06, -0.05, -0.065
visual                   	= weapons\aps\wpn_apb_k_hud.ogf

anim_holster				= holster   
anim_idle					= idle
anim_empty					= empty
anim_reload					= reload_empty
anim_reload_empty			      = reload_empty
anim_draw					= draw   
anim_draw_empty				= draw_empty
anim_shoot					= shoot_auto
anim_shot_last				= shoot_last
anim_close					= close_v2
anim_idle_aim				= idle_aim
anim_idle_sprint	                  = idle_sprint

;смещения HUD для режима приближения
zoom_offset			= -0.05888,0.04220,-0.0330
zoom_rotate_x		= -0.00875
zoom_rotate_y		= -0.00120
;---------------------------------------------
;прячем перекрестие прицела в зуме
zoom_hide_crosshair		= true

